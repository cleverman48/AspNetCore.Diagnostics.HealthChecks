<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(NetFrameworkVersion);$(NetStandardVersion)</TargetFrameworks>
    <Description>HealthChecks.solr is the health check package for solr.</Description>
    <PackageTags>HealthCheck;Health;solr</PackageTags>
    <Version>$(HealthCheckSolr)</Version>
    <PackageId>AspNetCore.HealthChecks.Solr</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks"/>
    <PackageReference Include="SolrNet.Core"/>
  </ItemGroup>
</Project>