<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>$(NetStandardTargetVersion)</TargetFramework>
    <Description>HealthChecks.solr is the health check package for solr.</Description>
    <PackageTags>HealthCheck;Health;solr</PackageTags>
    <Version>$(HealthCheckSolr)</Version>
    <PackageId>AspNetCore.HealthChecks.Solr</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="$(MicrosoftExtensionsDiagnosticsHealthChecks)"/>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="$(MicrosoftSourceLinkGithub)">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="SolrNet.Core" Version="$(SolrNetCore)"/>
  </ItemGroup>
</Project>