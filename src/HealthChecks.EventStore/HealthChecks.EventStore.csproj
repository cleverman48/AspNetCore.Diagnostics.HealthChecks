<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(NetFrameworkVersion);$(NetStandardVersion)</TargetFrameworks>
    <PackageTags>HealthCheck;Health;EventStore</PackageTags>
    <Description>HealthChecks.EventStore is the health check package for EventStore.</Description>
    <Version>$(HealthCheckEventStore)</Version>
    <PackageId>AspNetCore.HealthChecks.EventStore</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="EventStore.Client" Version="$(EventStoreClient)" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="$(MicrosoftExtensionsDiagnosticsHealthChecks)" />
  </ItemGroup>
</Project>
