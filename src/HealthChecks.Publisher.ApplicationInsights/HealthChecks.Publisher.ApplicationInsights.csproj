<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(NetCoreTargetVersion)</TargetFramework>
    <PackageTags>HealthCheck;Publisher;Application Insights</PackageTags>
    <Description>HealthChecks.Publisher.ApplicationInsights is the health check publisher for Application Insights.</Description>
    <Version>$(HealthCheckPublisherAppplicationInsights)</Version>
    <PackageId>AspNetCore.HealthChecks.Publisher.ApplicationInsights</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.ApplicationInsights" Version="$(MicrosoftApplicationInsights)" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="$(MicrosoftExtensionsDiagnosticsHealthChecks)" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="$(MicrosoftSourceLinkGithub)">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>
